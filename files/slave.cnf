# FILE MANAGED BY PUPPET
# Multi-Instance config for mysql slave

[client]
port 	= 330<%= slave_server_id %>
socket	= /var/run/mysqld/mysqld<%= slave_server_id %>.sock

[mysqld]
user      = root
pid-file  = /var/run/mysqld/mysqld<%= slave_server_id %>.pid
socket    = /var/run/mysqld/mysqld<%= slave_server_id %>.sock
port      = 330<%= slave_server_id %>
basedir   = /usr
datadir   = /var/lib/mysql<%= slave_server_id %>
tmpdir    = /tmp
skip-external-locking

bind-address = 127.0.0.1 
 
key_buffer 				= 256M
max_allowed_packet 		= 1M
table_cache 			= 256
sort_buffer_size 		= 1M
read_buffer_size 		= 1M
read_rnd_buffer_size 	= 4M
myisam_sort_buffer_size = 64M
thread_cache_size 		= 8
query_cache_size 		= 16M
thread_concurrency 		= 16
#bind-address 			= 0.0.0.0

log_error 			= /var/log/mysql/error.log
log_bin 			= /var/log/mysql/mysql<%= slave_server_id %>-bin.log
relay_log 			= /var/lib/mysql/mysql<%= slave_server_id %>-relay-bin.log
log_slave_updates 	= 1
read_only 			= 1
server-id 			= <%= slave_server_id %>
expire_logs_days = 0
max_binlog_size = 100M
 
max_connections = 250
 
innodb_file_per_table
innodb_buffer_pool_size 		= 128M
innodb_additional_mem_pool_size = 20M
innodb_log_file_size 			= 128M
innodb_log_buffer_size 			= 16M
innodb_data_home_dir=
innodb_data_file_path			= /var/lib/mysql/ibdata1:10M:autoextend
# For emergency -- cron handler taking too long.
innodb_lock_wait_timeout 		= 50
 
slow_query_log		= 1
slow_query_log_file	= /var/log/mysql/slow.log
long_query_time		= 10
 
[mysqld_safe]
socket    = /var/run/mysqld/mysqld<%= slave_server_id %>.sock
nice    = 0
